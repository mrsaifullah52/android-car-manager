<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistics.SearchDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/colorPrimaryDark"
            />
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:paddingVertical="10dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expense Category: "/>
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/categoryTv"
                android:paddingVertical="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fueling"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:paddingVertical="10dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meter Reading: "/>
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/meterReadingTv"
                android:paddingVertical="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00 km"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:paddingVertical="10dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost: "/>
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/costTv"
                android:paddingVertical="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:paddingVertical="10dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost Date: "/>
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/dateTv"
                android:paddingVertical="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2021"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:paddingVertical="10dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost Time: "/>
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/timeTv"
                android:paddingVertical="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:25:09"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="horizontal"
            android:id="@+id/imagesParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>
</ScrollView>