<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".compute.Compute"
    android:orientation="vertical"
    android:paddingVertical="20dp"
    android:paddingHorizontal="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fuel Consumption"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@color/colorPrimaryDark"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingHorizontal="20dp"
                >

                <LinearLayout
                    android:paddingHorizontal="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="18sp"
                        android:textColor="@color/colorError"
                        />

                    <TextView
                        android:id="@+id/costTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS: 3530"
                        android:textSize="14sp"
                        android:textColor="#000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:paddingHorizontal="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By KM"
                        android:textSize="18sp"
                        android:textColor="@color/colorError"
                        />

                    <TextView
                        android:id="@+id/costKM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS: 7.06"
                        android:textSize="14sp"
                        android:textColor="#000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:paddingHorizontal="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By Mile"
                        android:textSize="18sp"
                        android:textColor="@color/colorError"
                        />

                    <TextView
                        android:id="@+id/costMile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS: 12.36"
                        android:textSize="14sp"
                        android:textColor="#000"
                        />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingHorizontal="20dp"
                >

                <LinearLayout
                    android:paddingHorizontal="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="18sp"
                        android:textColor="@color/colorError"
                        />

                    <TextView
                        android:id="@+id/distanceTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500km"
                        android:textSize="14sp"
                        android:textColor="#000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:paddingHorizontal="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By KM"
                        android:textSize="18sp"
                        android:textColor="@color/colorError"
                        />

                    <TextView
                        android:id="@+id/distanceKM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100km"
                        android:textSize="14sp"
                        android:textColor="#000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:paddingHorizontal="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By Mile"
                        android:textSize="18sp"
                        android:textColor="@color/colorError"
                        />

                    <TextView
                        android:id="@+id/distanceMile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="62m"
                        android:textSize="14sp"
                        android:textColor="#000"
                        />
                </LinearLayout>
            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fuel"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingHorizontal="20dp"
                >

                <LinearLayout
                    android:paddingHorizontal="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="18sp"
                        android:textColor="@color/colorError"
                        />

                    <TextView
                        android:id="@+id/fuelTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33.35 Ltr"
                        android:textSize="14sp"
                        android:textColor="#000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:paddingHorizontal="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By KM"
                        android:textSize="18sp"
                        android:textColor="@color/colorError"
                        />

                    <TextView
                        android:id="@+id/fuelKM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.067Ltr"
                        android:textSize="14sp"
                        android:textColor="#000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:paddingHorizontal="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By Mile"
                        android:textSize="18sp"
                        android:textColor="@color/colorError"
                        />

                    <TextView
                        android:id="@+id/fuelMile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.093 Ltr"
                        android:textSize="14sp"
                        android:textColor="#000"
                        />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</LinearLayout>